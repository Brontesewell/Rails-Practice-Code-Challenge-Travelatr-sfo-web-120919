<h1>Create A New Blog Post!</h1>

<%= form_for(@blogger) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/><br/>
  <%= f.label :age %>
  <%= f.text_field :age %>
  <br/><br/>
  <%= f.label :bio %>
  <%= f.text_field :bio %>
  <br/><br/>
  <%= f.submit "Create a Blog!" %>
<% end %>

<% if @blogger.errors.any? %>
  <ul>
    <% @blogger.errors.full_messages.each do |e| %>
      <li style="color:red;"><%= e %></li>
    <% end %>
  </ul>
<% end %>